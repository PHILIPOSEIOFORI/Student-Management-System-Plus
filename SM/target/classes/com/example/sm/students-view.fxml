<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sm.StudentsController"
            prefWidth="1000" prefHeight="600">

    <top>
        <VBox spacing="5" style="-fx-padding: 10;">

            <HBox spacing="10">
                <Button text="â† Back to Main Menu"
                        onAction="#goBack"/>
                <Label text="Students"
                       style="-fx-font-size: 20px;" />
            </HBox>

            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Search by ID or Name"/>
                <ComboBox fx:id="statusFilter" promptText="Filter by Status"/>
                <Button text="Search" onAction="#handleSearch"/>
                <Button text="Clear" onAction="#handleClearSearch"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="studentTable">
            <columns>
                <TableColumn fx:id="idCol" text="Student ID" />
                <TableColumn fx:id="nameCol" text="Full Name" />
                <TableColumn fx:id="programmeCol" text="Programme" />
                <TableColumn fx:id="levelCol" text="Level" />
                <TableColumn fx:id="gpaCol" text="GPA" />
                <TableColumn fx:id="statusCol" text="Status" />
            </columns>
        </TableView>
    </center>

    <right>
        <VBox spacing="8" style="-fx-padding: 10;">
            <TextField fx:id="idField" promptText="Student ID"/>
            <TextField fx:id="nameField" promptText="Full Name"/>
            <TextField fx:id="programmeField" promptText="Programme"/>
            <TextField fx:id="levelField" promptText="Level"/>
            <TextField fx:id="gpaField" promptText="GPA"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <TextField fx:id="phoneField" promptText="Phone"/>

            <ComboBox fx:id="statusBox" promptText="Status"/>

            <Button text="Add Student" onAction="#handleAddStudent"/>
            <Button text="Update Student" onAction="#handleUpdateStudent"/>
            <Button text="Delete Selected" onAction="#handleDeleteStudent"/>
            <Button text="Export to CSV" onAction="#handleExportCSV"/>
            <Button text="Import from CSV" onAction="#handleImportCSV"/>
        </VBox>
    </right>

</BorderPane>
